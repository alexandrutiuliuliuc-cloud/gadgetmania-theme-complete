<section class="brand-introduction section-spacing">
  <div class="container">
    <div class="brand-intro-content">
      {% if section.settings.title != blank %}
        <h2 class="brand-intro-title">{{ section.settings.title }}</h2>
      {% endif %}
      
      {% if section.settings.text != blank %}
        <div class="brand-intro-text">
          {{ section.settings.text }}
        </div>
      {% endif %}
      
      {% if section.settings.button_text != blank and section.settings.button_url != blank %}
        <div class="brand-intro-button">
          <a href="{{ section.settings.button_url }}" class="btn btn-primary">
            {{ section.settings.button_text }}
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .brand-introduction {
    padding: 60px 0;
    background-color: {{ section.settings.background_color | default: '#f8f8f8' }};
  }
  
  .brand-intro-content {
    text-align: {{ section.settings.text_alignment | default: 'center' }};
    max-width: 800px;
    margin: 0 auto;
  }
  
  .brand-intro-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 20px;
    color: {{ section.settings.title_color | default: '#333' }};
    line-height: 1.2;
  }
  
  .brand-intro-text {
    font-size: 1.1rem;
    line-height: 1.6;
    margin-bottom: 30px;
    color: {{ section.settings.text_color | default: '#666' }};
  }
  
  .brand-intro-text p {
    margin-bottom: 15px;
  }
  
  .brand-intro-button {
    margin-top: 30px;
  }
  
  .btn {
    display: inline-block;
    padding: 12px 30px;
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.3s ease;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  
  .btn-primary {
    background-color: {{ section.settings.button_bg_color | default: '#007bff' }};
    color: {{ section.settings.button_text_color | default: '#fff' }};
    border: 2px solid {{ section.settings.button_bg_color | default: '#007bff' }};
  }
  
  .btn-primary:hover {
    background-color: transparent;
    color: {{ section.settings.button_bg_color | default: '#007bff' }};
  }
  
  @media (max-width: 768px) {
    .brand-introduction {
      padding: 40px 0;
    }
    
    .brand-intro-title {
      font-size: 2rem;
    }
    
    .brand-intro-text {
      font-size: 1rem;
    }
  }
</style>

{% schema %}
{
  "name": "Introduzione Brand",
  "tag": "section",
  "class": "brand-introduction-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Titolo",
      "default": "Il Nostro Brand"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Testo introduttivo",
      "default": "<p>Scopri la storia e i valori che ci guidano. Da anni ci impegniamo a offrire prodotti di qualità superiore e un servizio clienti eccezionale.</p>"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Allineamento testo",
      "options": [
        {
          "value": "left",
          "label": "Sinistra"
        },
        {
          "value": "center",
          "label": "Centro"
        },
        {
          "value": "right",
          "label": "Destra"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Pulsante (opzionale)"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Testo pulsante"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Link pulsante"
    },
    {
      "type": "header",
      "content": "Colori"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Colore sfondo",
      "default": "#f8f8f8"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Colore titolo",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Colore testo",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Colore sfondo pulsante",
      "default": "#007bff"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Colore testo pulsante",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Introduzione Brand",
      "settings": {
        "title": "Il Nostro Brand",
        "text": "<p>Scopri la storia e i valori che ci guidano. Da anni ci impegniamo a offrire prodotti di qualità superiore e un servizio clienti eccezionale.</p>"
      }
    }
  ]
}
{% endschema %}