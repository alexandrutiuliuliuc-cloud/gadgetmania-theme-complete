{%- liquid
  assign logo_type = 'text'
  if logo or inverted_logo
    assign logo_type = 'image'
    assign image_size = '600x200'
  endif
-%}

<div
  class="logo--root"
  data-type="{{ logo_type }}"
  itemscope
  itemtype="https://schema.org/Organization"
>
  <div class="logo--wrapper">
    <a href="{{ routes.root_url }}" title="{{ shop.name }}" itemprop="url">
      {% if logo_type == 'image' %}
        {% if image_type == 'inverted' %}
          <img
            src="{{ inverted_logo | img_url: image_size }}"
            alt="{{ inverted_logo.alt | default: shop.name }}"
            itemprop="logo"
            height="{{ height_range }}"
            width="{{ height_range | times: inverted_logo.aspect_ratio }}"
          >
        {% else %}
          <img
            src="{{ logo | img_url: image_size }}"
            alt="{{ logo.alt | default: shop.name }}"
            itemprop="logo"
            height="{{ height_range }}"
            width="{{ height_range | times: logo.aspect_ratio }}"
          >
        {% endif %}

      {% else %}
        <div class="logo--text" data-item="section-heading">
          {{ shop.name }}
        </div>

      {% endif %}
    </a>
  </div>
</div>